# HTPC Input Schema

    F1              PREVIOUS_VIEWER -
    F2              NEXT_VIEWER     -

    F7              VOLUME_UP       -
    F8              VOLUME_DOWN     -
    F12             EJECT           -


[MENU]
    LEFT            LEFT            -
    RIGHT           RIGHT           -
    UP              UP              -
    DOWN            DOWN            -
    ESCAPE          MENU            -
    ENTER           ENTER           -


[BROWSER]
    UP              UP              -
    DOWN            DOWN            -
    F6              FULLSCREEN      -
    ENTER           -               CUSTOM_0
    ESCAPE          MENU            -


[CUSTOM_0]
    ENTER           PLAY            -
    ESCAPE          -               BROWSER
    UP              PREVIOUS        -
    DOWN            NEXT            -
    LEFT            REWIND          -
    RIGHT           FORWARD         -


[PLAYER]
    UP              PREVIOUS        -
    DOWN            NEXT            -
    LEFT            REWIND          -
    RIGHT           FORWARD         -
    ESCAPE          MENU            -
    ENTER           PLAY            -
    F6              FULLSCREEN      -


[FULLSCREEN]
    UP              NAV_UP          -
    DOWN            NAV_DOWN        -
    LEFT            NAV_LEFT        -
    RIGHT           NAV_RIGHT       -
    F6              FULLSCREEN      -
    ESCAPE          NAV_MENU        -
    ENTER           NAV_ENTER       -
    MENU            MENU            -
    F5              MENU            -


# alternative controls for DVD menu
[CUSTOM_1]
    UP              NAV_UP          -
    DOWN            NAV_DOWN        -
    LEFT            NAV_LEFT        -
    RIGHT           NAV_RIGHT       -
    ENTER           NAV_ENTER       -
    ESCAPE          NAV_MENU        -
    MENU            -               FULLSCREEN

